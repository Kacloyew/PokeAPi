<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textPokemonName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textPokemonId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID:"
            android:textSize="18sp"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/textPokemonFavorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Favorito: No"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/textPokemonDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripción"
            android:textSize="16sp"
            android:layout_marginTop="24dp" />

        <Button
            android:id="@+id/buttonToggleFavorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="⭐ Marcar/Desmarcar Favorito"
            android:layout_marginTop="24dp" />

        <Button
            android:id="@+id/buttonBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Volver"
            android:layout_marginTop="16dp" />

    </LinearLayout>
</ScrollView>